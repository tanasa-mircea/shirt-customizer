<svg class="drawing-board" xmlns="http://www.w3.org/2000/svg">
  <g fill={{ shirtColor }} class="shirt-svg" transform="translate(0 0)">
    {{ sanitize (get shirtSvgs "front") }}
  </g>

  <g fill={{ shirtColor }} class="shirt-svg" transform="translate(200 0)">
    {{ sanitize (get shirtSvgs "back") }}
  </g>

  <g fill={{ shirtColor }} class="shirt-svg" transform="translate(400 0)">
    {{ sanitize (get shirtSvgs "side") }}
  </g>

  {{#each icons as |iconData|}}
    {{ board-icon icon=iconData.icon position=iconData.position parentOffsets=parentOffsets selected=(action 'iconSelected')}}
  {{/each}}

  {{#if showResize}}
    {{ resize-manager position=resizePosition parentOffsets=parentOffsets resizeEnd=(action 'resizeEnd') }}
  {{/if}}
</svg>