<svg class="drawing-board__svg" xmlns="http://www.w3.org/2000/svg" width={{svgWidth}} height={{svgHeight}}>
  {{#each-in shirts as |key value|}}
    {{ object-holder
      displayObject=(get shirtSvgs key)
      color=shirtColor
      size=intSize
      boardOffset=boardOffset
      translateX=(get value "translateX")
      index=key
      icons=(get icons key)
      iconMove=(action "iconMove")
      iconSelected=(action "iconSelected")
      replaceIconParent=(action "replaceIconParent")
      removeIcon=(action "removeIcon")
    }}
  {{/each-in}}

  {{#if showResize}}
    {{ resize-manager position=resizePosition boardOffset=boardOffset resizeEnd=(action "resizeEnd") }}
  {{/if}}
</svg>
