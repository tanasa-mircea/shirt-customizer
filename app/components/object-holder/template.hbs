<defs>
  <clipPath id={{ clipPathId }}>
    {{ sanitize displayObject }}
  </clipPath>
</defs>

<g fill={{ color }} clip-path={{ clipPathUrl }} transform={{ shirtScale }}>
  {{ sanitize displayObject }}

  {{#each icons as |iconData|}}
    {{ board-icon
        parentIndex=index
        icon=iconData.icon
        position=iconData.position
        color=iconData.color
        width=iconData.width
        parentScale=size
        height=iconData.height
        isSelected=iconData.selected
        currentIndex=iconData.currentIndex
        parentOffset=currentOffsets
        boardOffset=boardOffset
        move=(action "iconMove")
        selected=(action "iconSelected")
        replaceParent=(action "replaceIconParent")
        removeIcon=(action "removeIcon")
      }}
  {{/each}}
</g>
